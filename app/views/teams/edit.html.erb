<% provide(:title, "Edit team") %>
<h1>Update Team</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@team) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :captian %>
      <%= f.text_field :captian %>

      <%= f.label :spirit_captian %>
      <%= f.text_field :spiritcaptian %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :country %>
      <%= f.text_field :country %>

      <%-# commented line -%>
      <%-# <%= f.submit "Cancel", :back => 'cancel', class: "btn btn-large btn-primary" %>
      <%= f.submit "Save", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>